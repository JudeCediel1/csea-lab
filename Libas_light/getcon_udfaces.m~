% getcon_ssvepfaces% searches condnumberes in *dat file generarted by ssvepfaces filefunction [con4EEG] = getcon_udfaces(filepath);condvec = []; picvec = [];fid = fopen(filepath)count = 1;a = 1	 while a > 0	count  = count + 1     a = fgetl(fid) 	index1 = findstr(a, 'U_');    index2 = findstr(a, 'A'); 		    if ~isempty (index1); %inverted face		        conletters = deblank(a(index1(1)+6:index1(1)+7));        summand = 4; %  4 will be added to condition code        elseif isempty(index1) && ~isempty (index2); % upright face                conletters = deblank(a(index2(1)+4:index2(1)+5));        summand = 0; % nothing will be added to code            end                       if strcmp(conletters, 'HA'), condvec = [condvec 1+summand]            elseif strcmp(conletters, 'NE'), condvec = [condvec 2+summand]            elseif strcmp(conletters, 'AF'), condvec = [condvec 3+summand]              elseif strcmp(conletters, 'AN'), condvec = [condvec 4+summand]              end          pause endfclose('all')contentvec1234 = condvec'; con4EEG = contentvec1234; eval(['save ' filepath '.con con4EEG -ascii'])