% getcon_gaborfeature
% searches condnumbers in *dat file generated by gaborfeatures file

function [] = getcon_ssvepudfaces(filepath);

condvec = []; 

picvec = [];

fid = fopen(filepath)

trialcount = 1;
a = 1
	
 while a > 0
	
     a = fgetl(fid)
     
     if a < 0, break, return, end
        
         blankindex = find(a == ' '); 
     
            condnum1 = str2num(a(blankindex(2)+1))
            
            conletter = deblank(a(blankindex(4)+1));
        
          if conletter == 'A', condnum2 = 1;  
          elseif conletter == 'U', condnum2 = 2; 
          end  % if loop for condition 2
              
       conditionvec(trialcount) =    condnum1
            

trialcount = trialcount + 1; 
 end % while loop trials

fclose('all')

